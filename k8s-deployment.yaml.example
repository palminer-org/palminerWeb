# Kubernetes deployment example file
# Test environment deployment
apiVersion: apps/v1
kind: Deployment
metadata:
  name: pal-website-test
  namespace: default
spec:
  replicas: 2
  selector:
    matchLabels:
      app: pal-website-test
  template:
    metadata:
      labels:
        app: pal-website-test
    spec:
      containers:
      - name: pal-website
        image: your-registry/pal-website:test
        ports:
        - containerPort: 80
        env:
        - name: VITE_ENV
          value: "test"
        - name: VITE_API_BASE_URL
          value: "https://your-test-api.com"
        resources:
          requests:
            memory: "128Mi"
            cpu: "100m"
          limits:
            memory: "256Mi"
            cpu: "200m"
        livenessProbe:
          httpGet:
            path: /health
            port: 80
          initialDelaySeconds: 30
          periodSeconds: 10
        readinessProbe:
          httpGet:
            path: /health
            port: 80
          initialDelaySeconds: 10
          periodSeconds: 5
---
apiVersion: v1
kind: Service
metadata:
  name: pal-website-test-service
  namespace: default
spec:
  selector:
    app: pal-website-test
  ports:
  - protocol: TCP
    port: 80
    targetPort: 80
  type: ClusterIP
---
# Production environment deployment
apiVersion: apps/v1
kind: Deployment
metadata:
  name: pal-website-prod
  namespace: default
spec:
  replicas: 3
  selector:
    matchLabels:
      app: pal-website-prod
  template:
    metadata:
      labels:
        app: pal-website-prod
    spec:
      containers:
      - name: pal-website
        image: your-registry/pal-website:prod
        ports:
        - containerPort: 80
        env:
        - name: VITE_ENV
          value: "production"
        - name: VITE_API_BASE_URL
          value: "https://palminer-api.example.app"
        resources:
          requests:
            memory: "256Mi"
            cpu: "200m"
          limits:
            memory: "512Mi"
            cpu: "500m"
        livenessProbe:
          httpGet:
            path: /health
            port: 80
          initialDelaySeconds: 30
          periodSeconds: 10
        readinessProbe:
          httpGet:
            path: /health
            port: 80
          initialDelaySeconds: 10
          periodSeconds: 5
---
apiVersion: v1
kind: Service
metadata:
  name: pal-website-prod-service
  namespace: default
spec:
  selector:
    app: pal-website-prod
  ports:
  - protocol: TCP
    port: 80
    targetPort: 80
  type: LoadBalancer

